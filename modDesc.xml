<modDesc descVersion="61">
    <author>ParamIT</author>
    <version>22.0</version>
    <title><en>Animal Helper</en></title>
    <description>
        <en><![CDATA[Easily make your animals happy by filling up all their needs (Food, water, straw, horse riding)
Pending features:
- Use food from own storage if available. Otherwise buy.

Changelog:
- v22.0 Converted mod to FS22
]]>
        </en>
    </description>
    <iconFilename>happyAnimals.dds</iconFilename>
    <multiplayer supported="false"/>
    <extraSourceFiles>
        <sourceFile filename="animalHelper.lua" />
    </extraSourceFiles>
	<l10n>
		<text name="input_ANIMAL_HELPER_HIRE_HELPER"><en>Hire animal helper</en></text>
        <text name="ANIMAL_HELPER_UNREGISTERED"><en>AnimalHelper unregistered its eventlisteners.</en></text>
        <text name="ANIMAL_HELPER_STARTED"><en>Hired Animal Helpers are starting their work.</en></text>
        <text name="ANIMAL_HELPER_DONE"><en>Hired Animal Helpers are done. All animals are taken care off</en></text>
        <text name="ANIMAL_HELPER_ENABLED"><en>Animal Helpers ENABLED</en></text>
        <text name="ANIMAL_HELPER_DISABLED"><en>Animal Helpers DISABLED</en></text>
	</l10n>
    <actions>
        <action name="ANIMAL_HELPER_HIRE_HELPER" category="ONFOOT" locked="false" ignoreComboMask="false" />
    </actions>
    <inputBinding>
        <actionBinding action="ANIMAL_HELPER_HIRE_HELPER" >
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_lctrl KEY_9" />
            <binding device="GAMEPAD_DEFAULT"  input="BUTTON_5 BUTTON_6 BUTTON_1" axisComponent="+" neutralInput="0" index="1"/>
        </actionBinding>
    </inputBinding>
    <actions>
    </actions>
</modDesc>